<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netcoreapp2.0</TargetFramework>
    <Version>0.1.0</Version>
    <Authors>SchmidtGit</Authors>
    <Company>AdequateSource</Company>
    <Description>NydusNetwork provides raw access to the StarCraft II client using protobuf. Designed for the Abathur Framework but can be used separately. Currently in active development.</Description>
    <PackageProjectUrl>http://adequatesource.com/nydusnetwork</PackageProjectUrl>
    <PackageIconUrl>http://duxcloud.com/img/NydusNetworkIcon.png</PackageIconUrl>
    <RepositoryUrl>https://github.com/schmidtgit/nydusnetwork</RepositoryUrl>
    <PackageTags>StarCraft</PackageTags>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <NeutralLanguage>en-001</NeutralLanguage>
  </PropertyGroup>

  <ItemGroup>
    <None Remove="nuget.exe" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Google.Protobuf" Version="3.5.1" />
  </ItemGroup>

</Project>
